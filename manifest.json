{
  "manifest_version": 3,
  "name": "Perplexity Stats Tracker",
  "version": "1.0",
  "description": "Собирает статистику чатов Perplexity.ai",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://www.perplexity.ai/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Perplexity Stats"
  },
  "content_scripts": [
    {
      "matches": ["https://www.perplexity.ai/*"],
      "js": ["content.js"],
      "all_frames": true
    }
  ]
}